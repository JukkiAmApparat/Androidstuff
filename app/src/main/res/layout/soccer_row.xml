<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="fill"
        android:singleLine="true"
        android:lines="1"
        android:id="@+id/rank_cell"
        android:textStyle="normal"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/club_cell"
        android:gravity="left"
        android:singleLine="true"
        android:lines="1"
        android:textStyle="normal"/>
    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:id="@+id/games_cell"
        android:gravity="left"
        android:singleLine="true"
        android:lines="1"
        android:textStyle="normal"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/win_cell"
        android:gravity="left"
        android:singleLine="true"
        android:lines="1"
        android:textStyle="normal"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/draw_cell"
        android:gravity="left"
        android:singleLine="true"
        android:lines="1"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/lost_cell"
        android:gravity="left"
        android:layout_gravity="fill"
        android:singleLine="true"
        android:lines="1"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:id="@+id/goals_cell"
        android:gravity="left"
        android:layout_gravity="fill"
        android:singleLine="true"
        android:lines="1"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:id="@+id/diff_cell"
        android:gravity="right"
        android:layout_gravity="fill"
        android:singleLine="true"
        android:lines="1"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:id="@+id/points_cell"
        android:gravity="left"
        android:layout_gravity="fill"
        android:singleLine="true"
        android:lines="1"
        android:textStyle="normal"/>
</TableRow>